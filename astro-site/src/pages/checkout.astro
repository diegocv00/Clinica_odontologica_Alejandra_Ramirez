---
import Layout from "../layouts/Layout.astro";
import { SHIPPING_RATES, CITIES, DEPARTMENTS } from "../data/shippingRates";
import "../styles/checkout.css";
---

<Layout title="Finalizar Compra - Clínica Odontológica">
    <div class="checkout-wrapper">
        <h2 class="section-title">FINALIZAR COMPRA</h2>

        <div class="checkout-process">
            <!-- Progress Indicators -->
            <div class="checkout-steps">
                <div class="step active" id="step-1-indicator">
                    <span class="step-num">1</span>
                    <span class="step-label">Resumen</span>
                </div>
                <div class="step-line"></div>
                <div class="step" id="step-2-indicator">
                    <span class="step-num">2</span>
                    <span class="step-label">Datos</span>
                </div>
                <div class="step-line"></div>
                <div class="step" id="step-3-indicator">
                    <span class="step-num">3</span>
                    <span class="step-label">Envío</span>
                </div>
                <div class="step-line"></div>
                <div class="step" id="step-4-indicator">
                    <span class="step-num">4</span>
                    <span class="step-label">Pago</span>
                </div>
            </div>

            <div class="checkout-content-card">
                <!-- Step 1: Cart Summary -->
                <div id="step-1" class="step-content active">
                    <h3 class="step-title">Tu Pedido</h3>
                    <div id="cart-items-container">
                        <!-- Items injected by JS -->
                        <div class="loading-cart">Cargando carrito...</div>
                    </div>

                    <div class="cart-summary-box">
                        <div class="summary-line">
                            <span>Subtotal</span>
                            <span id="cart-subtotal" class="price">$0</span>
                        </div>
                    </div>

                    <div class="step-actions">
                        <button class="btn-primary" id="btn-to-step-2" disabled
                            >Continuar</button
                        >
                    </div>
                </div>

                <!-- Step 2: Customer Info -->
                <div id="step-2" class="step-content">
                    <h3 class="step-title">Información de Contacto</h3>
                    <form id="customer-form">
                        <div class="form-group">
                            <label for="customer-name">Nombre Completo</label>
                            <input type="text" id="customer-name" required />
                        </div>
                        <div class="form-group">
                            <label for="customer-email"
                                >Correo Electrónico</label
                            >
                            <input type="email" id="customer-email" required />
                        </div>
                        <div class="form-group">
                            <label for="customer-phone"
                                >Teléfono / WhatsApp</label
                            >
                            <input type="tel" id="customer-phone" required />
                        </div>
                        <div class="form-group">
                            <label for="customer-address"
                                >Dirección de Entrega</label
                            >
                            <input type="text" id="customer-address" required />
                        </div>

                        <div class="step-actions">
                            <button
                                type="button"
                                class="btn-secondary"
                                id="back-to-step-1">Atrás</button
                            >
                            <button type="submit" class="btn-primary"
                                >Continuar</button
                            >
                        </div>
                    </form>
                </div>

                <!-- Step 3: Shipping -->
                <div id="step-3" class="step-content">
                    <h3 class="step-title">Método de Envío</h3>

                    <div class="shipping-selector-container">
                        <div class="form-group">
                            <label for="shipping-department">Departamento</label
                            >
                            <select id="shipping-department">
                                <option value=""
                                    >-- Selecciona un departamento --</option
                                >
                                {
                                    DEPARTMENTS.map((dept) => (
                                        <option value={dept}>{dept}</option>
                                    ))
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="shipping-city">Ciudad / Municipio</label
                            >
                            <select id="shipping-city" disabled>
                                <option value=""
                                    >-- Primero selecciona un departamento --</option
                                >
                            </select>
                        </div>
                    </div>

                    <div id="shipping-result" class="hidden">
                        <div class="shipping-info-box">
                            <div class="shipping-row">
                                <span class="label">Costo estimado:</span>
                                <span class="value" id="shipping-cost-value"
                                    >$0</span
                                >
                            </div>
                            <p class="shipping-note">
                                El tiempo de entrega estimado es de 2-4 días
                                hábiles.
                            </p>
                        </div>
                    </div>

                    <div class="step-actions">
                        <button class="btn-secondary" id="back-to-step-2"
                            >Atrás</button
                        >
                        <button class="btn-primary" id="btn-to-step-4" disabled
                            >Ir a Pagar</button
                        >
                    </div>
                </div>

                <!-- Step 4: Payment -->
                <div id="step-4" class="step-content">
                    <h3 class="step-title">Resumen Final</h3>

                    <div class="order-receipt">
                        <div class="receipt-row">
                            <span>Subtotal Productos</span>
                            <span id="final-subtotal">$0</span>
                        </div>
                        <div class="receipt-row">
                            <span>Costo de Envío</span>
                            <span id="final-shipping">$0</span>
                        </div>
                        <div class="receipt-divider"></div>
                        <div class="receipt-total">
                            <span>Total a Pagar</span>
                            <span id="final-total">$0</span>
                        </div>
                    </div>

                    <div class="payment-area">
                        <p class="payment-instruction">
                            Estás a un paso de finalizar tu compra de forma
                            segura con Wompi.
                        </p>
                        <div id="wompi-container">
                            <!-- Wompi Widget -->
                        </div>
                    </div>

                    <div class="step-actions">
                        <button class="btn-secondary" id="back-to-step-3"
                            >Atrás</button
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<script src="../scripts/checkout.ts"></script>
